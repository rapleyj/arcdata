%h4 Add Attachment
=semantic_form_for [incident, resource], url: incidents_incident_attachments_path(incident), builder: FormtasticBootstrap::FormBuilder, html: {class: 'form-horizontal'}, remote: true do |f|
  =f.input :name
  =f.input :description, input_html: {rows: 4}
  =f.actions do
    =f.action :reset, label: "Cancel", button_html: {class: "btn btn-danger", confirm: "Are you sure you want to cancel?", data: {target: "#create-attachment", toggle: "collapse"}}
    =f.action :submit, label: "Create Log", button_html: {class: "btn btn-primary"}